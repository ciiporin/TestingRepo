class christmas {
	public static void main(String[] args) {
		int number;
		System.out.print("Enter number: ");
		// number=readInt();
		number = 10;
		System.out.println();
		
		for (int i = 1; i <= number; i++) {
			System.out.print("On the ");
			if (i == 1){
				System.out.print("1st");

			}else if (i==2){
				System.out.print("2nd");

			}else if (i==3){
				System.out.print("3rd");
		
			}else {
				System.out.print(i + "th");

			}
			
			System.out.println(" day of Christmas my true love gave to me");
			if (number == 12){
				System.out.print("twelve drummers drumming, ");

			}else if(number == 11){
					System.out.println("eleven pipers piping, ");
			}else if(number == 10){
					System.out.print("ten lords a-leping, ");
			}else if(number == 9){
					System.out.print("nine ladies dancing, ");
			}else if(number == 8){
					System.out.println("eight maids a-milking, ");
			}else if(number == 7){
					System.out.print("seven swans a-swimming, ");
			}else if(number == 6){
					System.out.print("six geese a-laying, ");
			}else if(number == 5){
					System.out.println("five gold rings,");
			}else if(number == 4){
					System.out.print("four calling birds, ");
			}else if(number == 3){
					System.out.print("three french hens, ");
			}else if(number == 2){
					System.out.print("two turtle doves\nand ");
			}else if(number == 1){
					System.out.println("a partridge in a pear tree.");
			
			
				}
				System.out.println();
			}
			}
			}
			
}

				
				
				
				
				
				
				
